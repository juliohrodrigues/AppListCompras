<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCompras.View.ExibirItem">
    <ContentPage.Content>
        <StackLayout Margin="10, 0, 10, 0">
            <Label Text="Código:" />
            <Label x:Name="lbl_id"  Text="{Binding Id}" />

            <Label Text="Produto" />
            <Entry x:Name="txt_produto" Text="{Binding Produto}" />

            <Label Text="Preço" />
            <Entry x:Name="txt_preco" Text="{Binding Preco}" Keyboard="Numeric" />

            <Label Text="Quantidade" />
            <Entry x:Name="txt_qntd" Text="{Binding Quantidade}" Keyboard="Numeric" />

            <Label Text="Descrição" />
            <Entry x:Name="txt_descricao" Text="{Binding Descricao}" />

            <Label Text="Total:" />
            <Label x:Name="lbl_valortotal" Text="{Binding Total}" />

            <Button Text="Salvar" Clicked="Button_Clicked_1" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>